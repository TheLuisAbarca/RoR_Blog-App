<div class="user-div">
  <img src="<%= user.photo %>" class="user-img" alt="profile picture of <%= user.name %>"></img>

  <%= link_to user_path(user), class:"user-link" do %>
    <div class="usr-inf">
      <h3 class="user-name"><%= user.name %></h3>
      <% if user.postsCounter.nil? %>
        <p class="posts">Number of posts: 0</p>
      <% else %>
        <p class="posts">Number of posts: <%= user.postsCounter %></p>
      <% end %>
    </div>
  <% end %>
</div>
